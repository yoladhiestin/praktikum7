package praktikum7;

package com.company;

import java.util.Scanner;

public class Praktikum7 {
    public static void main (String[] args) {

        Scanner in = new Scanner(System.in);

        while(true) {
            System.out.println("Masuk ke Sistem Parkir? y/n");
            char masuk = in.nextLine().charAt(0);

            if (masuk == 'y') {
                new Program1();
            }
            if (masuk == 'n') {
                break;
            }

        }
    }
}
